    <footer id="page-footer" class="uk-margin-xlarge-top" uk-sticky>
        <div class="uk-container">
            <p class="uk-text-small"> &copy; 2021 - Pastelaria SMN </p>
        </div>
    </footer>

    <script src="~/js/uikit.js"></script>
    <script src="~/js/uikit-icons.js"></script>

