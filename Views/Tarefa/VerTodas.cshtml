@model ConsultarTarefasUsuarioViewModel
@{
    ViewData["Title"] = "Todas as Tarefas";
}

<div class="uk-margin-medium uk-margin-small-top">
    <h1 class="uk-text-center uk-heading-line"><span>Todas as Tarefas</span></h1>
</div>

<div uk-filter="target: .js-filter">

    <div class="uk-flex uk-flex-center">
      <ul class="uk-subnav uk-subnav-pill">
          <li class="uk-active" uk-filter-control><a href="#">Todas</a></li>
          <li uk-filter-control="[data-color='Atrasada']"><a href="#">Atrasada</a></li>
          <li uk-filter-control="[data-color='Agendada']"><a href="#">Agendada</a></li>
          <li uk-filter-control="[data-color='Futura']"><a href="#">Futura</a></li>
          <li uk-filter-control="[data-color='Concluída']"><a href="#">Concluída</a></li>
          <li uk-filter-control="[data-color='Cancelada']"><a href="#">Cancelada</a></li>
      </ul>
    </div>

    <table class="uk-table uk-table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descrição</th>
                <th>Status</th>
                <th>Data Limite</th>
                <th>Data Cadastro</th>
                <th>Data Conclusão</th>
                <th>Data Cancelamento</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
          <div class="js-filter">
          @foreach (var tarefa in @Model.Lista)
          {
                <tr data-color="@tarefa.Status.Nome"> 
                  <td>@tarefa.IdTarefa</td>
                  <td>@tarefa.Descricao</td>
                  <td>@tarefa.Status.Nome</td>
                  <td>@tarefa.DataLimite</td>
                  <td>@tarefa.DataCadastro</td>
                  <td>@tarefa.DataConclusao</td>
                  <td>@tarefa.DataCancelada</td>
                  <td>
                    <a asp-area="" asp-controller="Tarefa" asp-action="ConsultarTarefa" asp-route-id="@tarefa.IdTarefa"
                      class="uk-button uk-button-primary uk-button-small">
                      Comentarios
                    </a>
                  </td>
                </tr>
          }
          </div>
        </tbody>
    </table>


</div>