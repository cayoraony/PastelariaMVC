@model AtualizarUsuarioViewModel
@{
    ViewData["Title"] = "Atualizar Dados";
}

@section scripts {
  <script>
    function validarSenha() {
      let NovaSenha = document.getElementById('Senha').value;
      let CNovaSenha = document.getElementById('CSenha').value;

      if (NovaSenha == CNovaSenha) {
          document.getElementById('editarSub').submit();
          alert("Formulário enviado");
      } else {
          alert("Senha diferentes, preencha novamente");
      }
  }
  </script>
}

<div class="uk-margin-medium uk-margin-small-top">
    <h1 class="uk-text-center uk-heading-line"><span>Atualizar Dados</span></h1>
</div>

<div class="uk-container uk-container-xsmall">
    <form id="editarSub" asp-controller="Usuario" asp-action="SubordinadoPut" asp-route-id="@Model.IdUsuario" method="put" class="form-horizontal" role="form">
        <div class="uk-margin">
            <label asp-for="Nome" class="uk-form-label uk-text-large"></label>
            <div class="uk-form-controls">
                <input class="uk-input" asp-for="Nome" placeholder="Digite o nome">
                <span asp-validation-for="Nome" class="uk-text-danger"></span>
            </div>
        </div>

        <div class="uk-margin">
            <label asp-for="Sobrenome" class="uk-form-label uk-text-large"></label>
            <div class="uk-form-controls">
                <input class="uk-input" asp-for="Sobrenome" placeholder="Digite o sobrenome">
                <span asp-validation-for="Sobrenome" class="uk-text-danger"></span>
            </div>
        </div>

        <div class="uk-margin">
            <label asp-for="Senha" class="uk-form-label uk-text-large"></label>
            <div class="uk-form-controls">
                <input id="Senha" class="uk-input" asp-for="Senha" type="password" placeholder="Digite a senha">
                <span asp-validation-for="Senha" class="uk-text-danger"></span>
            </div>
        </div>

        <div class="uk-margin">
            <label asp-for="ConfirmarSenha" class="uk-form-label uk-text-large"></label>
            <div class="uk-form-controls">
                <input id="Senha" class="uk-input" asp-for="ConfirmarSenha" type="password" placeholder="Digite a senha">
                <span asp-validation-for="ConfirmarSenha" class="uk-text-danger"></span>
            </div>
        </div>

