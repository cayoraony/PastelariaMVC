@model GestorHomeViewModel

<h1>Equipe</h1>
<a class="uk-button uk-button-default" asp-area="" asp-controller="Usuario" asp-action="Criar">
  Criar Usuário
</a>
<br>
<a class="uk-button uk-button-default" asp-area="" asp-controller="Tarefa" asp-action="Criar">
  Criar Tarefa
</a>

<table class="uk-table uk-table-middle uk-table-divider">
    <thead>
        <tr>
            <th class="uk-width-small">Id</th>
            <th>Nome</th>
            <th>Tarefas</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
      @foreach (var user in @Model.Subordinados)
      {
          <tr>
            <td>@user.IdUsuario</td>
            <td>@user.Nome @user.Sobrenome</td>
            <td>
              @* 
              ToDo - JM
              O link deve encaminhar para Tela de tarefas pendentes do usuário
              Então, vai passar o IdUsuario para se comunicar com a API 
              Então, deve mudar o endpoint da API e PROC
              *@

              @* <a asp-area="" asp-controller="Usuario" asp-action="ConsultarSubordinado" asp-route-id="@user.IdUsuario"> *@
              <a asp-area="" asp-controller="Tarefa" asp-action="Listar" asp-route-id="@user.IdUsuario">
                @await Component.InvokeAsync("TarefasAndamentoViewComponent", new { id = user.IdUsuario })
              </a>
            </td>
            <td><a class="uk-button uk-button-primary uk-button-small" type="button"
                   asp-area="" asp-controller="Usuario" asp-action="ConsultarSubordinado" asp-route-id="@user.IdUsuario">
                  Detalhes
                </a>
            </td>
          </tr>
      }
    </tbody>
</table>